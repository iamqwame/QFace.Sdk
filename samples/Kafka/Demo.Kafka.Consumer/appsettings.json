{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "QFace.Sdk.Kafka": "Debug"
    }
  },
  "KafkaConsumerConfig": {
    "BootstrapServers": "137.184.151.224:9092",
    "GroupId": "demo-analytics-group",
    "TopicGroups": {
      "Analytics": [
        "demo.events",
        "analytics.events"
      ],
      "UserEvents": [
        "user.created",
        "user.updated", 
        "user.deleted"
      ],
      "SystemMonitoring": [
        "system.metric",
        "system.health",
        "system.alerts"
      ]
    },
    "ExtraProperties": {
      "auto.offset.reset": "latest",
      "enable.auto.commit": "false"
    },
    "MaxBatchSize": 100,
    "BatchTimeoutMs": 3000,
    "EnableAutoCommit": false,
    "SessionTimeoutMs": 30000,
    "MaxPollIntervalMs": 300000,
    "RetryCount": 3,
    "RetryIntervalMs": 1000
  },
  "MessageGroupConsumerLogicConfig": {
    "TimeoutInMilliseconds": 3000,
    "MaxElements": 100,
    "CommitStrategy": "AfterSuccessfulProcessing",
    "EnableManualOffsetManagement": false
  },
  "ActorConfig": {
    "SystemName": "KafkaDemoConsumerSystem"
  }
}
