{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "QFace.Sdk.Kafka": "Debug"
    }
  },
  "KafkaConsumerConfig": {
    "BootstrapServers": "167.71.115.70:9092",
    "GroupId": "demo-analytics-group-1",
    "TopicGroups": {
      "Analytics": ["demo.events", "analytics.events"],
      "UserEvents": ["user.created", "user.updated", "user.deleted"],
      "SystemMonitoring": ["system.metric", "system.health", "system.alerts"]
    },
    "MaxBatchSize": 10,
    "BatchTimeoutMs": 1000,
    "EnableAutoCommit": false,
    "SessionTimeoutMs": 10000,
    "MaxPollIntervalMs": 30000
  },
  "MessageGroupConsumerLogicConfig": {
    "TimeoutInMilliseconds": 3000,
    "MaxElements": 100
  },
  "ActorConfig": {
    "SystemName": "KafkaDemoConsumerSystem"
  }
}
