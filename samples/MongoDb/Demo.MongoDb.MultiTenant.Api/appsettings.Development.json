{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Logs": {
    "Url": "monitor.umat.edu.gh",
    "Port": 12201,
    "Facility": "Demo.MongoDb.MultiTenant.Api",
    "MinimumLevel": "Information",
    "IncludeConsole": true,
    "Using": "Graylog"
  },
  "AllowedHosts": "*",
  "MongoDbManagement": {
    "ConnectionString": "mongodb://admin:admin123@localhost:27017",
    "DatabaseName": "TenantManagement"
  },
  "DefaultTenantDbData": {
    "ConnectionString": "mongodb://admin:admin123@localhost:27017",
    "DatabaseName": "shared_erp_core"
  },
  "Jwt": {
    "SecretKey": "YourSecretKeyHereWhichShouldBeAtLeast32CharsLong",
    "Issuer": "MultiTenantApp",
    "Audience": "MultiTenantAppUsers",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 7
  }
}