{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDb": {
    "ConnectionString": "mongodb://admin:admin123@localhost:27017",
    "DatabaseName": "Shared_Tenent_Db",
    "UseSsl": false
  },
  "TenantResolution": {
    "UseRouteResolution": true,
    "UseHeaderResolution": true,
    "UseQueryStringResolution": false,
    "UseCookieResolution": false,
    "UseAuthClaimResolution": true,
    "IncludeTenantInfoInResponse": true,
    "RequireTenant": false,
    "RejectInvalidTenants": false,
    "RejectUnprovisionedTenants": true,
    "FailOnResolutionError": false,
    "ExcludedPaths": [
      "/health",
      "/metrics",
      "/.well-known",
      "/favicon.ico"
    ],
    "TenantExemptPaths": [
      "/api/tenants",
      "/api/auth"
    ]
  }
}
